<p class="description">Generate a random number between the two numbers that you chose.</p>

<%- contentFor('sidebar2') %>
<p class="header">Range</p>
<p class="description">Set a lower and upper limit of the result.</p>
<div class="input-contents">
	<div class="input-content min-max-content">
		<label for="input-min">Min</label>
		<input type="number" class="form-control" id="input-min" value="0" />
	</div>
	<div class="input-content min-max-content">
		<label for="input-max">Max</label>
		<input type="number" class="form-control" id="input-max" value="20" />
	</div>
</div>

