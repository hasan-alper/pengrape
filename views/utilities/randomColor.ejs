<%- contentFor('option1') %>
<section id="option-1-content">
	<div id="option-1-1-content">
		<div class="header-contents">
			<p class="header">Format</p>
			<p class="description">Choose format of the color code.</p>
		</div>
		<div class="input-contents">
			<div class="input-content">
				<input type="radio" class="btn-check" id="button-hex" name="format" value="hex" checked />
				<label for="button-hex" class="btn btn-outline-primary btn-sm">HEX</label>
			</div>
			<div class="input-content">
				<input type="radio" class="btn-check" id="button-rgb" name="format" value="rgb" />
				<label for="button-rgb" class="btn btn-outline-primary btn-sm">RGB</label>
			</div>
			<div class="input-content">
				<input type="radio" class="btn-check" id="button-hsl" name="format" value="hsl" />
				<label for="button-hsl" class="btn btn-outline-primary btn-sm">HSL</label>
			</div>
		</div>
	</div>
</section>

<%- contentFor('option2') %>
<section id="option-2-content">
	<div id="option-2-1-content">
		<div class="header-contents">
			<p class="header">Color Values</p>
			<p class="description">Customize the result by fixing color code values.</p>
		</div>
		<div class="input-contents">
			<div id="range-content">
				<div>
					<label for="range-1" class="form-label range-label">Red:</label>
					<label class="form-label range-output">00</label>
				</div>
				<div>
					<input type="range" class="form-range" min="0" max="255" id="range-1" value="0" />
					<input type="checkbox" id="button-lock-1" class="btn-check" />
					<label class="btn btn-outline-light btn-xs" for="button-lock-1"><i class="fas fa-lock"></i></label>
				</div>
				<div>
					<label for="range-2" class="form-label range-label">Green:</label>
					<label class="form-label range-output">00</label>
				</div>
				<div>
					<input type="range" class="form-range" min="0" max="255" id="range-2" value="0" />
					<input type="checkbox" id="button-lock-2" class="btn-check" />
					<label class="btn btn-outline-light btn-xs" for="button-lock-2"><i class="fas fa-lock"></i></label>
				</div>
				<div>
					<label for="range-3" class="form-label range-label">Blue:</label>
					<label class="form-label range-output">00</label>
				</div>
				<div>
					<input type="range" class="form-range" min="0" max="255" id="range-3" value="0" />
					<input type="checkbox" id="button-lock-3" class="btn-check" />
					<label class="btn btn-outline-light btn-xs" for="button-lock-3"><i class="fas fa-lock"></i></label>
				</div>
			</div>
		</div>
	</div>
</section>

