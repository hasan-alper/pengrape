<% layout("layouts/boilerplate") %>
<div class="d-flex flex-column text-center border mb-5">
	<div style="height: 15vh" class="d-flex border justify-content-between align-items-center border-success p-3">
		<a href="/" class="link-secondary">Back</a>
		<h1>Random Password</h1>
		<span style="opacity: 0; cursor: default">Back</span>
	</div>
	<div style="min-height: 15vh" class="d-flex border border-warning justify-content-center align-items-center p-3">
		<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatem, cumque dicta necessitatibus ex distinctio suscipit.</p>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-primary">
		<button id="button" class="btn btn-primary m-1">Generate</button>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-dark">
		<h3 class="text-secondary mx-3 my-1 me-auto">Result</h3>
		<button id="copy-button" class="btn btn-secondary me-3 my-1 btn-sm">Copy</button>
	</div>
	<div style="min-height: 30vh" class="d-flex justify-content-center align-items-center border border-danger">
		<span class="fs-3 mx-3" style="word-break: break-all" id="output"></span>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-dark">
		<h3 class="text-secondary mx-3 my-1 me-auto">Options</h3>
	</div>
	<div style="min-height: 30vh" class="d-flex flex-column justify-content-center border border-info p-3">
		<form>
			<div class="row">
				<div class="col-12 col-md-4 mb-3">
					<div class="row d-flex justify-content-center">
						<div class="col-8 col-md-12">
							<label for="length" class="form-label">Password length</label>
						</div>
						<div class="col-8 col-md-12 mb-3">
							<input type="number" id="length" value="20" class="form-control" />
						</div>
					</div>
				</div>
				<div class="col-12 col-md-4">
					<div class="row d-flex justify-content-center">
						<div class="col-12">
							<label class="form-label">Include</label>
						</div>
						<div class="col-8 col-md-12 d-grid gap-2">
							<input type="checkbox" name="type" id="lowercase" class="btn-check" checked />
							<label for="lowercase" class="btn btn-outline-secondary">Lowercase letters</label>
						</div>
						<div class="col-8 col-md-12 d-grid gap-2 mt-3">
							<input type="checkbox" name="type" class="btn-check" id="uppercase" checked />
							<label for="uppercase" class="btn btn-outline-secondary">Uppercase letters</label>
						</div>
						<div class="col-8 col-md-12 d-grid gap-2 mt-3">
							<input type="checkbox" name="type" class="btn-check" id="number" checked />
							<label for="number" class="btn btn-outline-secondary">Numbers</label>
						</div>
						<div class="col-8 col-md-12 d-grid gap-2 mt-3">
							<input type="checkbox" name="type" id="symbol" class="btn-check" />
							<label for="symbol" class="btn btn-outline-secondary">Symbols</label>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
