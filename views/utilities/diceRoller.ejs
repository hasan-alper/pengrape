<% layout("layouts/boilerplate") %>

<nav id="navbar">
	<a href="/" class="logo">pengrape</a>
	<span id="title">Dice Roller</span>
	<a class="logo fake">pengrape</a>
</nav>

<section id="results-section">
	<div id="results-div">
		<div id="results-buttons">
			<input type="button" id="button" class="btn btn-primary" value="Roll" />
		</div>
		<div id="results-output">
			<div id="total-output"></div>
			<div id="output"></div>
		</div>
	</div>
</section>

<section id="options-section">
	<div id="option-1">
		<div class="row" id="row1">
			<button class="btn btn-outline-dark" id="increase-amount"><i class="fas fa-chevron-up"></i></button>
			<button class="btn btn-outline-dark" id="increase-side"><i class="fas fa-chevron-up"></i></button>
		</div>
		<div class="row" id="row2">
			<span id="amount-output">1</span>
			<span id="d-span">d</span>
			<span id="side-output">6</span>
		</div>
		<div class="row" id="row3">
			<button class="btn btn-outline-dark" id="decrease-amount"><i class="fas fa-chevron-down"></i></button>
			<button class="btn btn-outline-dark" id="decrease-side"><i class="fas fa-chevron-down"></i></button>
		</div>
		<div class="row" id="row4">
			<input type="checkbox" id="total-button" class="btn-check" />
			<label class="btn btn-outline-secondary btn-md" for="total-button">Total</label>
		</div>
	</div>
</section>
