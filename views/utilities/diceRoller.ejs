<%- contentFor('option1') %>
<section id="option-1-content">
	<div id="option-1-1-content">
		<div class="header-contents">
			<p class="header">Total</p>
			<p class="description">Show total of the results.</p>
		</div>
		<div class="input-contents">
			<div class="input-content">
				<input type="checkbox" id="button-total" class="btn-check" />
				<label class="btn btn-outline-primary btn-lg" for="button-total">Total</label>
			</div>
		</div>
	</div>
</section>

<%- contentFor('sidebar1') %>
