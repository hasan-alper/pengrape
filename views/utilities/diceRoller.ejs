<% layout("layouts/boilerplate") %>
<div class="d-flex flex-column text-center border mb-5">
	<div style="height: 15vh" class="d-flex border justify-content-between align-items-center border-success p-3">
		<a href="/" class="link-secondary">Back</a>
		<h1>Dice Roller</h1>
		<span style="opacity: 0; cursor: default">Back</span>
	</div>
	<div style="min-height: 15vh" class="d-flex border border-warning justify-content-center align-items-center p-3">
		<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatem, cumque dicta necessitatibus ex distinctio suscipit.</p>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-primary">
		<button id="button" class="btn btn-primary m-1">Roll</button>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-dark">
		<h3 class="text-secondary mx-3 my-1 me-auto">Result</h3>
	</div>
	<div style="min-height: 30vh" class="d-flex flex-column border border-danger">
		<div id="total-output" class="border">-</div>
		<div id="output" class="row row-cols-6 border"></div>
	</div>
	<div class="d-flex justify-content-center align-items-center border border-dark">
		<h3 class="text-secondary mx-3 my-1 me-auto">Options</h3>
	</div>
	<div style="min-height: 20vh" class="d-flex flex-column justify-content-center border border-info p-3">
		<form>
			<div class="row">
				<div class="col-1">
					<input class="btn btn-secondary" id="increase-amount" type="button" value="increase" />
				</div>
				<div class="col-1 offset-1">
					<input class="btn btn-secondary" id="increase-side" type="button" value="increase" />
				</div>
			</div>
			<div class="row">
				<div class="col-1 my-2">
					<span id="amount-output" class="fs-3">1</span>
				</div>
				<div class="col-1 my-2">
					<span class="fs-3">d</span>
				</div>
				<div class="col-1 my-2">
					<span id="side-output" class="fs-3">6</span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-1">
					<input class="btn btn-secondary" id="decrease-amount" type="button" value="decrease" />
				</div>
				<div class="col-1 offset-1">
					<input class="btn btn-secondary" id="decrease-side" type="button" value="decrease" />
				</div>
			</div>
			<div class="row">
				<div class="col-1">
					<input type="checkbox" id="total-button" class="btn-check" />
					<label class="btn btn-outline-secondary" for="total-button">Total</label>
				</div>
			</div>
		</form>
	</div>
</div>
