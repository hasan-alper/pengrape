<%- contentFor('sidebar2') %>
<p class="header">Notation</p>
<p class="description">Enter a dice notation.</p>
<div class="input-contents">
	<div class="input-content" id="row-1">
		<button class="btn btn-light btn-md" id="button-increase-amount"><i class="fas fa-chevron-up"></i></button>
		<button class="btn btn-light btn-md" id="button-increase-side"><i class="fas fa-chevron-up"></i></button>
	</div>
	<div class="input-content" id="row-2">
		<span id="amount-output">1</span>
		<span id="d-span">d</span>
		<span id="side-output">6</span>
	</div>
	<div class="input-content" id="row-3">
		<button class="btn btn-light btn-md" id="button-decrease-amount"><i class="fas fa-chevron-down"></i></button>
		<button class="btn btn-light btn-md" id="button-decrease-side"><i class="fas fa-chevron-down"></i></button>
	</div>
</div>
<%- contentFor('result') %>
<div id="total-content"></div>
<div id="output-content-wrap">
	<div id="output-content"></div>
</div>

